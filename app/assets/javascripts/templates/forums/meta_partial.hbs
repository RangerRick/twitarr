<div class="card-section clickable" {{action 'display_forum' id last_post_page}}  {{!-- Should link to last unread post page, not the first --}}>
  <span class="title big-title">
    {{unbound subject}}
  </span>
  {{unbound pretty_timestamp timestamp}}

  <div class="form">
    {{{unbound posts_sentence}}}
    <div class="controls">
      Most recent: {{unbound pretty_username last_post_author.username last_post_author.display_name }}
    </div>
  </div>

</div>

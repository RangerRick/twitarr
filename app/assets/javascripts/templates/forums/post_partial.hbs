<div {{bind-attr class="model.first_unread:scroll_to :card-section :section-with-photo"}}>
  <div class="section-photo">
    {{#link-to 'user.profile' model.author.username}}
      {{unbound user_picture model.author.username model.author.last_photo_updated}}
    {{/link-to}}
  </div>

  <span class="title">
    {{#link-to 'user.profile' model.author.username}}
      {{unbound pretty_username model.author.username model.author.display_name}}
    {{/link-to}}
  </span>
  {{unbound pretty_timestamp model.timestamp}}
  <div class="body">
    <div class="body-section">
      {{{unbound model.text}}}
    </div>
    <div class="body-section photos">
      {{#each photo in model.photos}}
        {{render 'photo_mini' photo }}
      {{/each}}
    </div>
  </div>
  <div class="controls">
    <div>
      <span {{bind-attr class="model.new::hidden"}} style="color: red;">new</span>
      {{model.likes_string}}
    </div>
    <div>
      <button {{action 'unlike' bubbles=false}} {{bind-attr class="unlikeable::hidden :btn-link"}}>Unlike</button>
      <button {{action 'like' bubbles=false}} {{bind-attr class="likeable::hidden :btn-link"}}>Like</button>
      <button {{action 'edit' id bubbles=false}} {{bind-attr class="editable::hidden :btn-link"}}>Edit</button>
      <button {{action 'delete' id bubbles=false}} {{bind-attr class="deleteable::hidden :btn-link"}}>Delete</button>
    </div>
  </div>
  
</div>
<nav id="top-bar" role="navigation">
  <button type="button" class="menu-toggle" {{action 'menu_toggle'}}>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  {{#link-to "stream"}}
    <span class="menu-brand">
      Twit-arr
    </span>
  {{/link-to}}
  {{#if alerts}}
    {{#link-to "alerts"}}
      <span class="menu-alerts glyphicon glyphicon-warning-sign" title="You have new alerts!"></span>
    {{/link-to}}
  {{/if}}
  <div class="pull-right top-bar-search">
    <form>
        <table style="width: 20em;">
          <tr>
            <td style="width: 2em;">
              <span class="glyphicon glyphicon-search"></span>
            </td>
            <td>
              {{input value=text class='input top-bar-search-text' placeholder='Search...'}}
            </td>
            <td style="width: 3em; padding-left: 1em;">
              <button class="btn" style="margin: 10px 15px 5px 0px;" {{action 'search' text}}>Go</button>
            </td>
          </tr>
        </table>
    </form>
  </div>
</nav>
<div id="side-menu">
  <div class="full-screen-overlay" {{action 'menu_toggle'}} ></div>
  <div id="menu">
    <div id="login-info">
      <span {{bind-attr class="logged_in:hidden"}}>Not logged in.</span>
      <span {{bind-attr class="logged_in::hidden"}}>{{#link-to 'user' login_user}}{{ display_name }}{{/link-to}}</span>
    </div>
    <ul {{action 'menu_close'}}>
      <li {{bind-attr class="logged_in::hidden"}}>{{#link-to "seamail"}}<span class="glyphicon glyphicon-envelope"></span>Seamail{{/link-to}}</li>
      <li>{{#link-to "forums"}}<span class="glyphicon glyphicon-list"></span>Forums{{/link-to}}</li>
      <li>{{#link-to "stream"}}<span class="glyphicon glyphicon-bullhorn"></span>Tweets{{/link-to}}</li>
      <li>{{#link-to "events"}}<span class="glyphicon glyphicon-calendar"></span>Events{{/link-to}}</li>
      <li>---</li>
      <li>
        {{#link-to "alerts"}}
          <!-- If this isn't lined up this way some whitespace creeps in -->
          <span {{bind-attr class="alerts::hidden :glyphicon :glyphicon-warning-sign"}} style="color: #F62E51;"></span><span {{bind-attr class="alerts:hidden :glyphicon :glyphicon-warning-sign"}}></span>Alerts
        {{/link-to}}
      </li>
      <li>{{#link-to "search"}}<span class="glyphicon glyphicon-search"></span>Search{{/link-to}}</li>
      <li>---</li>
      <li>{{#link-to 'help'}}<span class="glyphicon glyphicon-question-sign"></span>Help{{/link-to}}</li>
      <li>---</li>
      <li><a href="#" {{action 'login'}} {{bind-attr class="logged_in:hidden"}}>Login</a></li>
      <li><a href="#" {{action 'signup'}} {{bind-attr class="logged_in:hidden"}}>Sign up</a></li>
      <li {{bind-attr class="login_admin::hidden"}}>{{#link-to "admin.users"}}User administration{{/link-to}}</li>
      <li {{bind-attr class="login_admin::hidden"}}>{{#link-to "admin.announcements"}}New announcement{{/link-to}}</li>
      <li {{bind-attr class="login_admin::hidden"}}>---</li>
      <li {{bind-attr class="logged_in::hidden"}}>{{#link-to "profile"}}<span class="glyphicon glyphicon-user"></span>Profile{{/link-to}}</li>
      <li {{bind-attr class="logged_in::hidden"}}>{{#link-to "starred"}}<span class="glyphicon glyphicon-star"></span>Starred Users{{/link-to}}</li>
      <li {{bind-attr class="logged_in::hidden"}}><a tabindex='-1' href='#' {{ action 'logout' }}>Logout</a></li>
    </ul>
  </div>
</div>

<div id='main'>
  {{ outlet }}
  {{ outlet 'modal' }}
</div>

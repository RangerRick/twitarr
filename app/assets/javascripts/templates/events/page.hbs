<div {{bind-attr class=":main-page-header logged_in:header-with-controls"}}>
  <span class="controls">
    <button class="btn" {{action 'reload'}}>Refresh</button>
  </span>

  <div class="title">Events</div>
</div>
{{#each e in events}}
  {{e.date}}
  <div class="display_card">
    {{#each event in e.events}}
      {{render "events.meta_partial" event}}
    {{/each}}
  </div>
{{else}}
  <div>You haven't added any events yet!</div>
{{/each}}

<div class="footer-controls">
  {{#if has_prev_page}}
    <div class="card-section left">
      <button class="controls btn" {{action 'prev_page'}}>Previous</button>
    </div>
  {{/if}}
  {{#if has_next_page}}
    <div class="card-section">
      <button class="controls btn" {{action 'next_page'}}>Next</button>
    </div>
  {{/if}}
</div>

<a {{bind-attr class="logged_in::hidden"}}>{{#link-to 'events.all' 0}}View all events{{/link-to}}</a>
<br />
<a {{bind-attr class="logged_in::hidden"}}>{{#link-to 'events.past' 0}}View past events{{/link-to}}</a>

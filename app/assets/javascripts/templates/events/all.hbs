<div class="main-page-header header-with-controls">
  <span class="controls">
    <button class="btn" {{action 'csv'}}>Export list as CSV</button>
    <button {{bind-attr class=":btn login_admin::hidden"}} {{action 'csv'}}>Export list as CSV</button>
    <button {{bind-attr class=":btn login_admin::hidden"}} {{action 'create_event'}}>Create Event</button>
  </span>

  <div class="title">{{#link-to 'events' }}Events{{/link-to}} > All Events</div>
</div>
{{#each e in events}}
  {{e.date}}
  <div class="display_card">
    {{#each event in e.events}}
      {{render "events.meta_partial" event}}
    {{/each}}
  </div>
{{else}}
  <div>No events have been added to the system.</div>
{{/each}}

<div class="footer-controls">
  {{#if has_prev_page}}
    <div class="card-section left">
      <button class="controls btn" {{action 'prev_page'}}>Previous</button>
    </div>
  {{/if}}
  {{#if has_next_page}}
    <div class="card-section">
      <button class="controls btn" {{action 'next_page'}}>Next</button>
    </div>
  {{/if}}
</div>

<a {{bind-attr class="logged_in::hidden"}}>{{#link-to 'events.past' 0}}View past events{{/link-to}}</a>

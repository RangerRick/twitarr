<div class="main-page-header header-with-controls">
  <span class="controls">
    <button {{bind-attr class=":btn login_admin::hidden"}} {{action 'create_event'}}>Create Event</button>
  </span>
  <div class="title">My Schedule
    <button class="btn btn-link" {{action 'reload'}}><span class="glyphicon glyphicon-repeat" title="Refresh"></span>
    </button>
  </div>
</div>

<div class="display_card calendar-nav">
  <button class="btn left" {{action 'prev_day'}}>{{unbound prev_day_text}}</button>
  <button class="btn right" {{action 'next_day'}}>{{unbound next_day_text}}</button>
  <div>{{unbound today_text}}</div>
</div>

{{#each event in events}}
  <div class="display_card">
    {{render "schedule.meta_partial" event}}
  </div>
{{else}}
  <div>You aren't following any events for this day.</div>
{{/each}}

{{#if events}}
  <div class="display_card calendar-nav">
    <button class="btn left" {{action 'prev_day'}}>{{unbound prev_day_text}}</button>
    <button class="btn right" {{action 'next_day'}}>{{unbound next_day_text}}</button>
    <div>{{unbound today_text}}</div>
  </div>
{{/if}}

<div class="main-page-header header-with-controls">
  <span class="controls">
    <button class="btn" {{action 'upload_schedule'}}>Upload My Schedule</button>
  </span>
  <div class="title">
    My Schedule <button class="btn btn-link" {{action 'reload'}}><span class="glyphicon glyphicon-repeat" title="Refresh"></span></button>
  </div>
</div>

<div class="display_card calendar-nav">
  <button class="btn left" {{action 'prev_day'}}>{{prev_day_text}}</button>
  <button class="btn right" {{action 'next_day'}}>{{next_day_text}}</button>
  <div>{{today_text}}</div>
</div>

<div class="display_card">
{{#each event in model.events}}
    {{render "schedule.meta_partial" event}}
{{else}}
  <div class="card-section">You aren't following any events for this day.</div>
{{/each}}
</div>

{{#if model.events}}
  <div class="display_card calendar-nav">
    <button class="btn left" {{action 'prev_day'}}>{{prev_day_text}}</button>
    <button class="btn right" {{action 'next_day'}}>{{next_day_text}}</button>
    <div>{{today_text}}</div>
  </div>
{{/if}}

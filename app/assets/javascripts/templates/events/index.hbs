<div class="main-page-header header-with-controls">
  <span class="controls">
    {{#if has_prev_page}}
      <button class="controls btn" {{action 'prev_page'}}>Previous</button>
    {{/if}}
    <button class="btn" {{action 'reload'}}>Refresh</button>
  </span>
  <div class="title">My Events</div>
</div>

{{#each e in events}}
  {{e.date}}
  <div class="display_card">
    {{#each event in e.events}}
      {{render "schedule.meta_partial" event}}
    {{/each}}
  </div>
{{else}}
  {{#if past_events_page}}
    <div>No past events.</div>
  {{else}}
    <div>You're not following any events.</div>
  {{/if}}
{{/each}}

<div class="footer-controls">
  {{#if has_next_page}}
    <div class="card-section">
      <button class="controls btn" {{action 'next_page'}}>Next</button>
    </div>
  {{/if}}
</div>

<div class="main-page-header header-with-controls">
  <div class="controls">
    <button class="btn" {{action 'reload'}}>Refresh</button>
  </div>

  <div class="title">Tweets from Starred Users</div>
</div>

<div class="display_card">
  {{#each post in posts}}
    {{render "stream.post_partial" post}}
  {{/each}}
</div>

<div class="footer-controls">
  {{#if has_prev_page}}
    <div class="card-section left">
      <button class="controls btn" {{action 'prev_page'}}>Previous</button>
    </div>
  {{/if}}
  {{#if has_next_page}}
    <div class="card-section">
      <button class="controls btn" {{action 'next_page'}}>Next</button>
    </div>
  {{/if}}
</div>
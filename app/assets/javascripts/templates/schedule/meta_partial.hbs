<div class="card-section clickable" {{action 'display_event' id}}>
  <span {{bind-attr class=":title"}}>
    {{unbound location}}
  </span>

  {{unbound pretty_timespan start_time end_time}}

  <div class="body">
    <div class="body-section">
      {{unbound title}}
    </div>
  </div>
  <div class="controls">
    <div>
      <button {{action 'follow' model bubbles=false}} style="color: darkgreen;" {{bind-attr class="followable::hidden :btn-link"}}>Follow</button>
      <button {{action 'unfollow' model bubbles=false}} style="color: darkred;" {{bind-attr class="unfollowable::hidden :btn-link"}}>Unfollow</button>
    </div>
  </div>
</div>

<div class="card-section clickable" {{action 'display_event' model.id}}>
  <span class="title">
    {{model.location}}
  </span>

  {{pretty-timespan model.start_time model.end_time}}

  <div class="body">
    <div class="body-section">
      {{model.title}}
    </div>
  </div>
  <div class="controls">
    {{#if followable}}
      <button {{action 'follow' model.id bubbles=false}} class="btn">Follow</button>
    {{else}}
      <button {{action 'unfollow' model.id bubbles=false}} class="btn">Unfollow</button>
    {{/if}}
  </div>
  <div class="icons">
    {{#if model.official}}
      <span class="glyphicon glyphicon-flag official" title="Official event"></span>
    {{else}}
      <span class="glyphicon glyphicon-adjust shadow" title="Shadow cruise event"></span>
    {{/if}}
  </div>
</div>

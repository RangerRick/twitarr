<div {{bind-attr class=":main-page-header logged_in:header-with-controls"}}>
  <span {{bind-attr class=":controls logged_in::hidden"}}>
    {{#unless following}}
      <button class="btn" {{action 'follow'}}>Follow</button>
    {{else}}
      <button class="btn" {{action 'unfollow'}}>Unfollow</button>
    {{/unless}}
    {{#if editable}}
      <button class="btn" {{action 'edit'}}>Edit</button>
      <button class="btn" {{action 'delete'}}>Delete</button>
    {{/if}}
  </span>
  <div class="title">{{title}}</div>
</div>

<div class="display_card">
  <div class="card-section">
    <div {{bind-attr class=":title :big-title official:official"}}>
      {{unbound title}}
      <button class="btn btn-link right" {{action 'ical'}}><span class="glyphicon glyphicon-calendar right" title="Export as iCal"></span>
      </button>
    </div>
  </div>
  <div class="card-section">
    <div class="form row">
      <div class="col-xs-12">
        <p>{{unbound description}}</p>
      </div>
    </div>
    <div class="form row">
      <div class="col-xs-6">
        {{#if location}}
          <div class="label">Location</div>
          <div class="data">{{unbound location}}</div>
        {{/if}}
      </div>
      <div class="col-xs-6">
        <div class="label">Start Time</div>
        <div class="data">{{pretty_time start_time}}</div>
        {{#if end_time}}
          <div class="label">End Time</div>
          <div class="data">{{pretty_time end_time}}</div>
        {{/if}}
      </div>
    </div>
    <div class="icons">
      <span {{bind-attr class="official::hidden :glyphicon :glyphicon-flag :official"}} title="Official event">
        Official Event
      </span>
      <span {{bind-attr class="official:hidden :glyphicon :glyphicon-adjust :shadow"}} title="Shadow cruise event">
        Shadow Cruise Event
      </span>
    </div>
  </div>
</div>
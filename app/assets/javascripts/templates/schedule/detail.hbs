<div {{bind-attr class=":main-page-header logged_in:header-with-controls"}}>
  <div class="title">{{title}}</div>
  <span {{bind-attr class=":controls logged_in::hidden"}}>
    {{#unless following}}
      <button class="btn" {{action 'follow'}}>Follow</button>
    {{else}}
      <button class="btn" {{action 'unfollow'}}>Unfollow</button>
    {{/unless}}
    {{#if editable}}
      <button class="btn" {{action 'edit'}}>Edit</button>
      <button class="btn" {{action 'delete'}}>Delete</button>
    {{/if}}
  </span>
</div>

<div class="display_card">
  <div class="card-section">
    <div {{bind-attr class=":title :big-title official:official"}}>
      {{unbound title}} <a {{action 'ical'}}><span class="glyphicon glyphicon-calendar right" title="Export as iCal"></span></a>
    </div>
  </div>
  <div class="card-section">
    <div class="form row">
      <div class="col-xs-12">
        <p>{{unbound description}}</p>
      </div>
    </div>
    <div class="form row">
      <div class="col-xs-6">
        {{#if author}}
          <div class="label">Organized by</div>
          <div class="data">{{#link-to 'user' author}}{{unbound pretty_username author author_display_name}}{{/link-to}}</div>
        {{/if}}
        {{#if location}}
          <div class="label">Location</div>
          <div class="data">{{unbound location}}</div>
        {{/if}}
      </div>
      <div class="col-xs-6">
        <div class="label">Start Time</div>
        <div class="data">{{pretty_time start_time}}</div>
        {{#if end_time}}
          <div class="label">End Time</div>
          <div class="data">{{pretty_time end_time}}</div>
        {{/if}}
      </div>
    </div>
    
    {{#if max_signups}}
      <div class="form row">
        <div class="col-xs-6">
          <div class="label">Signups</div>
          <div class="data">{{signup_string signups}}</div>
        </div>
        <div class="col-xs-6">
          <div class="label">Maximum allowed signups</div>
          <div class="data">{{max_signups}}</div>
        </div>
      </div>
    {{/if}}
  </div>
</div>
<div class="main-page-header header-with-controls">
  <span class="controls">
    <button {{bind-attr class=":btn login_admin::hidden"}} {{action 'create_event'}}>Create Event</button>
    <button class="btn" {{action 'prev_day'}}>Previous</button>
    <button class="btn" {{action 'next_day'}}>Next</button>
  </span>
  <div class="title">Cruise Calendar {{unbound display_date}}
    <button class="btn btn-link" {{action 'reload'}}><span class="glyphicon glyphicon-repeat" title="Refresh"></span>
    </button>
  </div>
</div>

{{#each e in events}}
  {{e.date}}
  <div class="display_card">
    {{#each event in e.events}}
      {{render "schedule.meta_partial" event}}
    {{/each}}
  </div>
{{else}}
  <div>No events scheduled for this day.</div>
{{/each}}

{{#if has_next_page}}
  <div class="footer-controls">
    <button class="btn" {{action 'prev_day'}}>Previous</button>
    <button class="controls btn right" {{action 'next_day'}}>Next</button>
  </div>
{{/if}}

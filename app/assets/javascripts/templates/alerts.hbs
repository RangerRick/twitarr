<div class="main-page-header {{if logged_in 'header-with-controls'}}">
  {{#if logged_in}}
    <div class="controls">
      <button {{action 'clear_alerts'}} class="btn">Clear Events and Mentions</button>
    </div>
  {{/if}}
  <div class="title">Your Alerts
    <button class="btn btn-link" {{action 'reload'}}><span class="glyphicon glyphicon-repeat" title="Refresh"></span></button>
  </div>
</div>

{{#if model.announcements}}
  <div class="display_card">
    <div class="card_title">Announcements</div>
    {{#each announcement in model.announcements}}
      <div class="card-section section-with-photo">

        <div class="section-photo">
          {{user-picture announcement.author.username announcement.author.last_photo_updated}}
        </div>

        <span class="title">
          {{#link-to 'user.profile' announcement.author.username}}
            {{pretty-username announcement.author.username announcement.author.display_name}}
          {{/link-to}}
        </span>

        <div class="body">
          <div class="body-section" style="text-align: center; padding: 0.5em 0.4em">
            {{{announcement.text}}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

<div class="display_card">
  <div class="card_title">Unread Seamail</div>
  {{#each seamail in model.unread_seamail}}
    {{render "seamail.meta_partial" seamail}}
  {{else}}
    <div class="card-section">
      No unread seamail.
    </div>
  {{/each}}
  <div class="card-section">
    {{#link-to 'seamail.index'}}
      View all seamail
    {{/link-to}}
  </div>
</div>

<div class="display_card">
  <div class="card_title">Upcoming Events</div>
  {{#each event in model.upcoming_events}}
    {{render "schedule.meta_partial" event}}
  {{else}}
    <div class="card-section">
      No upcoming events.
    </div>
  {{/each}}
  <div class="card-section">
    {{#link-to 'events.today'}}
      View today's events
    {{/link-to}}
  </div>
</div>

<div class="display_card">
  <div class="card_title">Tweet Mentions</div>
  {{#each tweet in model.tweet_mentions}}
    {{render "stream.post_partial" tweet}}
  {{else}}
    <div class="card-section">
      No new tweet mentions.
    </div>
  {{/each}}
  <div class="card-section">
    {{#link-to 'stream.mentions' login_user}}
      View all tweet mentions
    {{/link-to}}
  </div>
</div>

<div class="display_card">
  <div class="card_title">Forum Mentions</div>
  {{#each forum in model.forum_mentions}}
    {{render "forums.meta_partial" forum}}
  {{else}}
    <div class="card-section">
      No new forum mentions.
    </div>
  {{/each}}
</div>

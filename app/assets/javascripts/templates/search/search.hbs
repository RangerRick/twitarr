<div class="main-page-header">
  <form>
    <table style="width: 100%;">
      <tr>
        <td style="width: 2em;">
          <span class="glyphicon glyphicon-search"></span>
        </td>
        <td>
          {{input value=model.query class='input' placeholder='Search...'}}
        </td>
        <td style="width: 3em; padding-left: 1em;">
          <button class="btn" {{action 'search' model.query}}>Go</button>
        </td>
      </tr>
    </table>
  </form>
</div>
